{% assign sorted_assignments = course.data.course.assignmentsConnection.edges | sort: "node.dueAt" %}
{% assign sorted_assignments = sorted_assignments | reverse %}

<h2>Assignments</h2>
<ul>
  {% for assignment in sorted_assignments %}
    <li>
      <strong>{{ assignment.node.name }}</strong>
      <span>Due: {{ assignment.node.dueAt | date: "%B %d, %Y" }}</span>
      {% if assignment.node.description %}
        <div>{{ assignment.node.description | escape_once }}</div>
      {% endif %}
      <a href="{{ assignment.node.htmlUrl }}">View Assignment</a>
    </li>
  {% endfor %}
</ul>



